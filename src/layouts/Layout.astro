---
import "../assets/globals.css";
const title = Astro.props.title ?? "X Essence"
import { getRelativeLocaleUrl } from 'astro:i18n';

import VideoBG from "../components/VideoBG.astro";
import Navbar from "../components/Navbar.astro";

const contactURL = getRelativeLocaleUrl("en", "contact")
const servicesURL = getRelativeLocaleUrl("en", "services")
const homeURL = getRelativeLocaleUrl("en", "index")
const aboutURL = getRelativeLocaleUrl("en", "about")
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar/>
		<div class="relative w-full h-full overflow-hidden">
            <VideoBG src="src/assets/video/demo1.mp4" />
            <div class="absolute inset-0 flex items-center justify-center z-10">
                <slot />
            </div>
        </div>
	</body>
</html>

<style>
	html,
	body {
		font-family: 'Aprikas';
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
